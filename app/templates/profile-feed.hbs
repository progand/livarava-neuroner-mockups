<h1 class="head-feed">Your feed</h1>

{{#each model as |item|}}
    <div class="feed-item container-fluid image-with-white-border-and-shadow">
        <div class="feed-item-header">

            <div class="feed-item-author-image">
                <img src="{{item.author.image}}"/>
            </div>

            <div class="feed-item-info">
                <div class="">
                    <b><a href="/member/{{item.author.id}}">{{item.author.title}}</a></b>
                    <span class="text-muted">created new akson for neuron</span>
                </div>

                <div class="feed-item-info-data">
                  <a class="datetime" href="#">{{moment-from-now item.axon.created}}</a>
                    Â· <a href="#">View</a>
                </div>

            </div>

        </div>

        <div class="axon-preview row">
            <div class="col-sm-6">
                <div class="axon-preview-neuron clearfix">
                    <a class="axon-preview-neuron-link" href="#">
                        <span class="axon-preview-livarava-icon image-with-white-border-and-shadow axon-preview-livarava-icon-liva">Liva</span>

                        <div class="text-center axon-preview-neuron-image-wrapper">
                            <span class="cover-image cover-image-round-200 image-with-white-border-and-shadow" style="background-image: url(https://dev.livarava.com/static/livarava/img/neurons/{{item.liva.type}}.png)" title="test"></span>
                        </div>
                        <p class="axon-preview-neuron-header feed-item-stub-text">
                            <span class="feed-item-stub-text">{{item.liva.title}}</span>
                        </p>
                    </a>
                    <div class="axon-preview-neuron-summary">
                      {{item.liva.summary}}
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="axon-preview-neuron clearfix">
                    <a class="axon-preview-neuron-link" href="#">
                        <span class="axon-preview-livarava-icon image-with-white-border-and-shadow axon-preview-livarava-icon-liva">Rava</span>

                        <div class="text-center axon-preview-neuron-image-wrapper">
                            <span class="cover-image cover-image-round-200 image-with-white-border-and-shadow" style="background-image: url(https://dev.livarava.com/static/livarava/img/neurons/{{item.rava.type}}.png)" title=""></span>
                        </div>
                        <p class="axon-preview-neuron-header">
                            <span class="feed-item-stub-text">{{item.rava.header}}</span>
                        </p>
                    </a>

                    <div class="axon-preview-neuron-summary">
                        <span class="feed-item-stub-text">Summary is missing.</span>
                    </div>
                </div>
            </div>
        </div>

    </div>
{{/each}}