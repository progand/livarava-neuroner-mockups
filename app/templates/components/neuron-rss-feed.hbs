{{#if isRSS}}
    <h4>RSS Feed</h4>

    <form class="form-inline pull-sm-right">
        <div class="form-group">
            <label class="c-input c-checkbox">
              {{input type="checkbox" checked=isFeedTextShown}}
                <span class="c-indicator"></span>
                Show text
            </label>
        </div>
    </form>

    {{#each rssFeedVisible as |rssFeedItem|}}
        <div class="media">
            <div class="media-left">
                <img class="media-object" width="60" src="{{rssFeedItem.image}}">
            </div>

            <div class="media-body">
                <h5 class="media-heading ">{{rssFeedItem.title}}</h5>

              {{#if isFeedTextShown}}
                  <p>{{{rssFeedItem.text}}}</p>
              {{/if}}
                <ul class="list-inline pull-left">
                    <li><span class="text-muted">Published:</span> {{moment-to-now rssFeedItem.date}}</li>
                </ul>
            </div>
        </div>
    {{/each}}
    {{#if hasMore}}
      <div class="m-t-2"><button class="btn btn-primary center-block" {{action "showMore"}}>More</button></div>
    {{/if}}

{{/if}}




{{yield}}
