{{#unless visible}}
    <a type="button" class="btn btn-link right-panel--toggle-button" {{action "toggle"}}>
        Show menu...
    </a>
{{/unless}}
<div class="modal-content right-panel m-a-0 {{if visible 'right-panel--visible'}}">
    <div class="modal-header">
        <button type="button" class="close" {{action "toggle"}}>
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Menu</h4>
    </div>
    <div class="modal-body">
      {{yield}}
    </div>
    <div class="modal-footer">

    </div>

</div><!-- /.modal-content -->


